# IoT-Focused Scan Configuration
# ===============================
# This configuration is optimized for IoT device discovery and analysis.
# Perfect for smart home security audits.

TARGET_NETWORK=192.168.68.0/24

# Smart Home Devices
ROUTER_IP=192.168.68.1
CHROMECAST_IP=192.168.68.56
TV_IP=192.168.68.62
PRINTER_IP=192.168.68.54
DLNA_IPS=192.168.68.52,192.168.68.62

# Extended passive scanning for IoT discovery
PASSIVE_DURATION=90
DISCOVERY_RATE=500
NUCLEI_SEVERITY=critical,high,medium

# Enable parallel execution
PARALLEL_EXECUTION=true
VERBOSE=true
SCAN_TIMEOUT=1200

# Enable all IoT-relevant modules
ENABLE_ATTACK_SURFACE=true
ENABLE_ADVANCED_MONITOR=true

