# Home Network Scan Configuration
# ================================
# This configuration is optimized for home network security audits.
# Adjust the IP addresses to match your network setup.

# Your home network (most common subnets)
TARGET_NETWORK=192.168.1.0/24

# Router/Gateway IP (typically .1 or .254)
ROUTER_IP=192.168.1.1

# Smart Home Devices (set to your actual IPs or leave defaults)
CHROMECAST_IP=192.168.1.100
TV_IP=192.168.1.101
PRINTER_IP=192.168.1.102
DLNA_IPS=192.168.1.103,192.168.1.104

# Scan Settings - Conservative for home use
PASSIVE_DURATION=60
DISCOVERY_RATE=500
NUCLEI_SEVERITY=critical,high,medium

# Performance - Enable parallel execution
PARALLEL_EXECUTION=true
VERBOSE=false
SCAN_TIMEOUT=900

# Enable all modules
ENABLE_ATTACK_SURFACE=true
ENABLE_ADVANCED_MONITOR=true
